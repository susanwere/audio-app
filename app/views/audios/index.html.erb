<p id="notice"><%= notice %></p>

<h1>Audios</h1>

<table>
  <thead>
    <tr>
      <th>Audio</th>
      <th>Embedded Audio</th>
      <th>Embedded Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @audios.each do |audio| %>
      <tr>
        <td><%= audio.title %></td>
        <td><%= audio_tag(audio.audio, autoplay: false, controls: true)%>
        <td>
          <%= button_tag 'Copy Link To Embed', 
                class: "clipboard-btn", 
                type: 'button', 
                'data-clipboard-text': "https://audio-a.herokuapp.com/audios/#{audio.id}" %>
        </td>
        <td><%= link_to 'Show', audio %></td>
        <td><%= link_to 'Edit', edit_audio_path(audio) %></td>
        <td><%= link_to 'Destroy', audio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
</iframe>
    <% end %>
  </tbody>
</table>

