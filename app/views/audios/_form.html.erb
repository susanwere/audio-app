<div class="audio">
  <%= form_for(audio, html: {class: "new-audio"} )do |f| %>
    <% if audio.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(audio.errors.count, "error") %> prohibited this audio from being saved:</h2>

        <ul>
        <% audio.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="row text-left">
      <%= f.label :audio, for: "colFormLabel", class: "col-sm-4 col-form-label" %>
      <div class="col-sm-6">
        <%= f.file_field :audio, accept: 'audio/mpeg, audio/x-mpeg, audio/mp3, audio/x-mp3, audio/mpeg3, audio/x-mpeg3, audio/mpg, audio/x-mpg, audio/x-mpegaudio audio/m4a' %>
      </div>
    </div>
    <div class="row text-left">
      <%= f.label :title, for: "colFormLabel", class: "col-sm-4 col-form-label" %>
      <div class="col-sm-6">
        <%= f.text_field :title, placeholder: "audio title" %>
      </div>
    </div>
    <button type="submit" class="actions btn btn-primary float-right mt-4">Submit</button>
  <% end %>
</div>
